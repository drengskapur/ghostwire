{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependencies"
  ],
  "semanticCommits": "enabled",
  "commitMessagePrefix": "chore(deps):",
  "separateMajorMinor": true,
  "separateMinorPatch": true,
  "prHourlyLimit": 2,
  "prConcurrentLimit": 10,
  "automerge": false,
  "platformAutomerge": false,
  "rangeStrategy": "pin",
  "assignees": [
    "@drengskapur"
  ],
  "reviewers": [
    "@drengskapur"
  ],
  "schedule": [
    "after 10pm every weekday",
    "before 5am every weekday",
    "every weekend"
  ],
  "timezone": "America/New_York",
  "helm-values": {
    "managerFilePatterns": [
      "/^chart/values\\.yaml$/",
      "/^chart/Chart\\.yaml$/"
    ]
  },
  "packageRules": [
    {
      "description": "Auto-merge critical vulnerabilities (CVSS 9.0+)",
      "matchDatasources": ["docker", "github-actions", "helmv3"],
      "vulnerabilitySeverity": ["CRITICAL"],
      "automerge": true,
      "automergeType": "pr",
      "prPriority": 10,
      "labels": ["security", "priority: critical", "auto-merge"],
      "semanticCommitType": "fix",
      "semanticCommitScope": "security"
    },
    {
      "description": "Prioritize high vulnerabilities (CVSS 7.0-8.9) but require manual review",
      "matchDatasources": ["docker", "github-actions", "helmv3"],
      "vulnerabilitySeverity": ["HIGH"],
      "automerge": false,
      "prPriority": 8,
      "labels": ["security", "priority: high"],
      "semanticCommitType": "fix",
      "semanticCommitScope": "security",
      "assignees": ["@drengskapur"]
    },
    {
      "description": "Kasmweb Signal Desktop rolling-daily image",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "kasmweb/signal"
      ],
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)-rolling-daily$",
      "labels": [
        "dependencies",
        "component: container"
      ],
      "semanticCommitType": "chore",
      "semanticCommitScope": "deps",
      "commitMessageTopic": "kasmweb/signal"
    },
    {
      "description": "Helm chart dependencies in Chart.yaml",
      "matchManagers": [
        "helmv3"
      ],
      "matchFileNames": [
        "chart/Chart.yaml"
      ],
      "labels": [
        "dependencies",
        "component: helm-chart"
      ],
      "semanticCommitType": "chore",
      "semanticCommitScope": "chart"
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["type: security", "priority: high"],
    "automerge": false,
    "assignees": ["@drengskapur"]
  },
  "ignoreDeps": [],
  "enabledManagers": [
    "dockerfile",
    "docker-compose",
    "github-actions",
    "helmv3",
    "helm-values",
    "custom.regex"
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/vendor/**",
    "**/.task/**",
    "**/dist/**",
    "**/build/**"
  ]
}
