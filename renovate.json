{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependencies"
  ],
  "semanticCommits": "enabled",
  "commitMessagePrefix": "chore(deps):",
  "separateMajorMinor": true,
  "separateMinorPatch": true,
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "branchConcurrentLimit": 0,
  "automerge": true,
  "platformAutomerge": true,
  "automergeType": "pr",
  "automergeStrategy": "squash",
  "rangeStrategy": "pin",
  "assignAutomerge": false,
  "assignees": [
    "drengskapur"
  ],
  "reviewers": [
    "drengskapur"
  ],
  "prCreation": "immediate",
  "rebaseWhen": "behind-base-branch",
  "schedule": [
    "after 10pm every weekday",
    "before 5am every weekday",
    "every weekend"
  ],
  "timezone": "America/New_York",
  "helm-values": {
    "managerFilePatterns": [
      "/^chart/values\\.yaml$/"
    ]
  },
  "packageRules": [
    {
      "description": "Automerge non-major updates with high confidence",
      "matchUpdateTypes": [
        "patch",
        "minor",
        "digest",
        "pin",
        "pinDigest"
      ],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true,
      "minimumReleaseAge": "3 days"
    },
    {
      "description": "Automerge GitHub Actions updates immediately",
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor",
        "digest"
      ],
      "automerge": true,
      "minimumReleaseAge": null,
      "schedule": [
        "at any time"
      ]
    },
    {
      "description": "Automerge Docker digests immediately",
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "digest",
        "pinDigest"
      ],
      "automerge": true,
      "minimumReleaseAge": null
    },
    {
      "description": "Major updates require manual approval",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "dependencyDashboardApproval": true
    },
    {
      "description": "Kasmweb Signal Desktop rolling-daily image",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "kasmweb/signal"
      ],
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)-rolling-daily$",
      "labels": [
        "dependencies",
        "component: container"
      ],
      "semanticCommitType": "chore",
      "semanticCommitScope": "deps",
      "commitMessageTopic": "kasmweb/signal"
    },
    {
      "description": "Helm chart dependencies in Chart.yaml",
      "matchManagers": [
        "helmv3"
      ],
      "matchFileNames": [
        "chart/Chart.yaml"
      ],
      "labels": [
        "dependencies",
        "component: helm-chart"
      ],
      "semanticCommitType": "chore",
      "semanticCommitScope": "chart"
    }
  ],
  "osvVulnerabilityAlerts": true,
  "dependencyDashboard": true,
  "dependencyDashboardAutoclose": true,
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "type: security"
    ],
    "assignees": [
      "drengskapur"
    ],
    "automerge": true,
    "schedule": [
      "at any time"
    ]
  },
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": [
      "before 5am on monday"
    ]
  },
  "ignoreDeps": [],
  "enabledManagers": [
    "dockerfile",
    "docker-compose",
    "github-actions",
    "helmv3",
    "helm-values",
    "custom.regex"
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/vendor/**",
    "**/.task/**",
    "**/dist/**",
    "**/build/**"
  ]
}
