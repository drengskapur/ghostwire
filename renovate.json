{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":automergeMinor",
    ":automergePatch",
    ":automergeDigest",
    "schedule:nonOfficeHours"
  ],
  "labels": [
    "dependencies"
  ],
  "semanticCommits": "enabled",
  "commitMessagePrefix": "chore(deps):",
  "separateMajorMinor": true,
  "separateMinorPatch": false,
  "prHourlyLimit": 5,
  "prConcurrentLimit": 15,
  "branchConcurrentLimit": 15,
  "automerge": true,
  "platformAutomerge": true,
  "automergeType": "pr",
  "automergeStrategy": "squash",
  "rangeStrategy": "pin",
  "assignAutomerge": false,
  "prCreation": "immediate",
  "rebaseWhen": "conflicted",
  "timezone": "America/New_York",
  "helm-values": {
    "managerFilePatterns": [
      "/^chart/values\\.yaml$/"
    ]
  },
  "packageRules": [
    {
      "description": "Automerge all non-major updates immediately if CI passes",
      "matchUpdateTypes": [
        "patch",
        "minor",
        "digest",
        "pin",
        "pinDigest"
      ],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true,
      "minimumReleaseAge": "1 day"
    },
    {
      "description": "Automerge GitHub Actions immediately - low risk with CI gates",
      "matchManagers": [
        "github-actions"
      ],
      "automerge": true,
      "minimumReleaseAge": null,
      "schedule": [
        "at any time"
      ]
    },
    {
      "description": "Automerge Docker digests immediately",
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "digest",
        "pinDigest"
      ],
      "automerge": true,
      "minimumReleaseAge": null
    },
    {
      "description": "Automerge Helm patch/minor updates",
      "matchManagers": [
        "helmv3",
        "helm-values"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "automerge": true,
      "minimumReleaseAge": "3 days"
    },
    {
      "description": "Group all major updates for single review",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "dependencyDashboardApproval": true,
      "groupName": "major updates"
    },
    {
      "description": "Kasmweb Signal Desktop rolling-daily image",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "kasmweb/signal"
      ],
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)-rolling-daily$",
      "labels": [
        "dependencies",
        "component: container"
      ],
      "automerge": true
    },
    {
      "description": "Helm chart dependencies in Chart.yaml",
      "matchManagers": [
        "helmv3"
      ],
      "matchFileNames": [
        "chart/Chart.yaml"
      ],
      "labels": [
        "dependencies",
        "component: helm-chart"
      ]
    }
  ],
  "osvVulnerabilityAlerts": true,
  "dependencyDashboard": true,
  "dependencyDashboardAutoclose": true,
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "type: security"
    ],
    "automerge": true,
    "prPriority": 20,
    "schedule": [
      "at any time"
    ],
    "minimumReleaseAge": null
  },
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": [
      "before 5am on monday"
    ]
  },
  "ignoreDeps": [],
  "enabledManagers": [
    "dockerfile",
    "docker-compose",
    "github-actions",
    "helmv3",
    "helm-values",
    "custom.regex"
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/vendor/**",
    "**/.task/**",
    "**/dist/**",
    "**/build/**"
  ]
}
